ion-view(hide-nav-bar="true")

  ion-header-bar.bar-stable.item-input-inset
    button.button.button-clear.button-assertive(ng-click="vm.openModal()") Filter&nbsp&nbsp
    label.item-input-wrapper
      i.icon.ion-ios7-search.placeholder-icon
      form(ng-submit="vm.querySearch(vm.itemsFilter)")
        input(type="search" placeholder="Search" ng-model="vm.itemsFilter")
    a.button.button-clear.button-assertive(href="#/tab/items/map") Map

  ion-content.bg-grey

    //- ng-single-select(options="options")
    div(class="list card" ng-repeat="item in vm.items | orderBy: 'dist' | filter:vm.itemsFilter" ng-click="vm.storeItem(item)")
      div(class="item item-image")
        img(src='{{item.image}}')

      a(class="item" href="#/tab/items/item/{{item._id}}")
        div {{item.name | limitTo:30 }}
        div @{{item.menu_name | limitTo:30 }}
        div.text-left.assertive {{item.stars}}
        div.text-left.energized.pull-right (250)

        span.text-right
          i.icon.ion-navigate(style="color:grey;") &nbsp
          span {{item.dist}} mi

          //- span
          //-   a(href="#/tab/items/map/{{item._id}}" ng-click="vm.storeItemForMap(item)") {{item.dist}} mi
